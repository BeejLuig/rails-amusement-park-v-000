<div class="container" role="main">
  <%= form_tag("/sessions", method: :post) do %>
    <div class="field">
      <label for="user_name">Select your name</label><br>
      <%= select_tag "user_id", options_from_collection_for_select(@users, "id", "name", "id")%>
    </div>

  <div class="actions">
    <input name="commit" type="submit" value="Sign In">
  </div>
  <% end %>
</div>
